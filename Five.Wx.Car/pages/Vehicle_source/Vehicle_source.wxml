<!--pages/Vehicle_source/Vehicle_source.wxml-->
<view class="container">
  <view class="search_bar">
    <input placeholder="搜索品牌/车系" auto-focus class="search_bar_txt"/>
  </view>
  <view class="hot-brand">
    <text class="source_title">热门品牌</text>
    <view class="hot-list">
      <view class="hot-item" wx:for="{{hotCar}}" wx:key="imgUrl">
        <image src="{{item.imgUrl}}" mode="scaleToFill center"></image>
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>
  <view class="import-car">
    <text class="source_title">平行进口车</text>
    <view class="car-parallel">
      <image src="/Img/宾利/宾利1.jpg" mode="scaleToFill center" class="car-parallel-icon"></image>
      <text class="car-parallel-txt">平行进口</text>
    </view>
  </view>
</view>
